/**myOrder.wxss**/
@import "../orderDetail/orderDetail";

.my-order .name-serve .deal-state {
    color: #ef5350;
}

.my-order .name-serve .deal-cancel {
    color: #bdbdbd;
}

.my-order .pro-show .price-con .dealClose {
    background: #f9d158;
    border: 1rpx solid #f9d158;
    color: #424242;
}


.my-order .check-detail {
    margin-top: 20rpx;
    padding-top: 20rpx;
    border-top: 1rpx solid #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #424242;
    font-size: 22rpx;
}

.my-order .check-detail image {
    margin-left: 10rpx;
    height: 25rpx;
    width: 15rpx;
}

.my-order .check-detail view:first-of-type {
    display: flex;
    align-items: center;
}

.my-order .check-detail view:first-of-type view {
    margin-left: 32rpx
}

.my-order .check-detail view:first-of-type view text  {
    font-size: 32rpx;
    color: #212121;
    margin:0 0 5rpx 12rpx;
}

.order-null {
    display:flex;
    flex:1;
    flex-direction: column;
    justify-content:center;
    align-items: center;
    text-align: center;
}

.order-null image {
    width: 348rpx;
    height: 431rpx;
}

.order-null  >view {
    border: 1rpx solid #e0e0e0;
    border-radius: 5rpx;
    margin-top: 75rpx;
    width: 300rpx;
    height: 100rpx;
    line-height: 100rpx;
}

.ml20 {
    margin-left: 20rpx;
}



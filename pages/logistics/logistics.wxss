
.orderInfo {
    width: 750rpx;
    height: 150rpx;
    background: #ffd037;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.orderInfo text {
    margin-left: 74rpx;
    color: #616161;
    font-size: 27rpx;
    line-height: 51rpx;
}


.detail {
    width: 690rpx;
    border: 1px solid #eee;
    margin: 15rpx 0 0 30rpx;
    background: #fff;
    padding: 37rpx 0;
    box-sizing: border-box;
}

.address, .shipping-detail {
    margin:0 45rpx 55rpx 90rpx;
    position:relative
}

.address image {
    width: 30rpx;
    height: 40rpx;
    position: absolute;
    left: -60rpx;
    top: -7rpx
}


.address view, .shipping-detail > view {
    font-size: 24rpx;
    line-height: 31rpx;
}

.address view {
    color: #212121;
    text-indent: -8rpx;
}

.shipping-detail .bigDot {
    width: 43rpx;
    height: 43rpx;
    position:absolute;
    left: -66.5rpx;
    top: -10rpx;
}

.shipping-detail .dot {
    width: 10rpx;
    height: 10rpx;
    position:absolute;
    left: -50rpx;
    top: 10rpx;
}

.shipping-detail > view {
    color: #bdbdbd
}

.shipping-detail > view  .timeStr {
    font-size: 18rpx;
    margin-top: 20rpx;
}

.phone {
    color: #56a5dc;
}


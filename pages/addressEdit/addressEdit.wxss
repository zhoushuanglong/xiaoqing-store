/**addressEdit.wxss**/

.address-edit {
    margin-bottom: 20rpx;
    padding: 10rpx 40rpx 20rpx;
}

.address-edit .address-eidt-title {
    color: #bdbdbd;
    font-size: 24rpx;
    line-height: 50rpx;
}

.address-edit .wrap {
    border-bottom: 1rpx solid #f5f5f5;
    display: flex;
    padding-bottom: 30rpx;
    margin-top: 30rpx;
    align-items: center;
}

.address-edit picker {
    border-bottom: 1rpx solid #f5f5f5;
    padding-bottom: 30rpx;
    font-size: 0;
    margin-top: 30rpx;
}

.address-edit label {
    color: #bdbdbd;
    font-size: 28rpx;
}

.address-edit picker label {
    margin-right: 50rpx;
}

.address-edit picker view {
    height: 40rpx;
    font-size: 28rpx;
}

.address-edit input {
    height: 40rpx;
    padding-left: 50rpx;
    flex: 1;
    font-size: 28rpx;
}

.set-default-address {
    padding-left: 40rpx;
    display: flex;
    color: #424242;
    font-size: 22rpx;
    line-height: 45rpx;
}

.set-default-address image {
    margin-right: 10rpx;
    height: 45rpx;
    width: 45rpx;
}

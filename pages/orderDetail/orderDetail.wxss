/**orderDetail.wxss**/

page {
    padding-bottom: 100rpx;
}

.order-detail {
    margin-bottom: 20rpx;
    padding: 30rpx 20rpx;
}

/*order-detail-banner*/

.order-detail-banner {
    height: 150rpx;
    position: relative;
}

.order-detail-banner image {
    height: 100%;
    width: 100%;
}

.order-detail-banner  text {
    position: absolute;
    left: 90rpx;
    top: 50%;
    color: red;
    font-size: 30rpx;
    transform: translateY(-50%);
}

/*logistics-info*/

.logistics-info {
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #212121;
    font-size: 28rpx;
}

.logistics-info .car {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    width: 50rpx;
}

.logistics-info .car image {
    height: 33rpx;
    width: 55rpx;
}

.logistics-info text {
    width: 560rpx;
}

.logistics-info .more {
    height: 25rpx;
    width: 15rpx;
}

/*user-info*/

.user-info {
    display: flex;
}

.user-info .pos {
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    width: 50rpx;
}

.user-info .pos image {
    height: 40rpx;
    width: 30rpx;
}

.user-info .user-info-con {
    width: 590rpx;
    color: #424242;
    font-size: 28rpx;
}

.user-info .user-info-con .name-phone {
    font-weight: bolder;
}

.user-info .user-info-con text {
    font-weight: bold;
    margin-right: 25rpx;
}

.user-info .user-info-con .address {
    margin-top: 10rpx;
    color: #424242;
    font-size: 22rpx;
}

/*pro-info*/

.pro-info .name-serve {
    border-bottom: 1rpx solid #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 50rpx;
    color: #212121;
    font-size: 22rpx;
}

.pro-info .name-serve .contact {
    background: transparent;
    font-size: 0;
    margin: 0;
    padding: 0;
    line-height: 1;
}

.pro-info .name-serve .contact:after {
    border:none
}

.pro-info .name-serve .contact text, .pro-info .name-serve .contact image {
    vertical-align: middle;
}

.pro-info .name-serve .contact text {
    font-size: 22rpx;
}

.pro-info .name-serve .contact image {
    margin-left: 10rpx;
    height: 28rpx;
    width: 30rpx;
}

/*pro-show*/

.pro-show {
    margin-top: 20rpx;
    display: flex;
    justify-content: space-between;
}

.pro-show-detail:not(:last-of-type) {
    padding-bottom: 30rpx;
    border-bottom: 1rpx solid #f5f5f5;
}

.pro-show.flex-start {
    justify-content: flex-start;
    flex-wrap: nowrap;
    overflow: hiddle;
}

.pro-show.flex-start image:not(:last-of-type) {
    margin-right: 15rpx;
}

.pro-show .price-con .goods_num {
    font-weight: normal;
}

.pro-show image {
    height: 150rpx;
    width: 150rpx;
    border-radius: 6rpx;
}

.pro-show .pro-con {
    width: 475rpx;
    color: #424242;
    font-size: 28rpx;
    font-weight: bold;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.pro-show .pro-con .price-con {
    display: flex;
    height: 58rpx;
    align-items: flex-end;
    align-content: flex-end;
    justify-content: space-between;
}

.pro-show .pro-con .price-con .price {
    display: flex;
    align-items: center;
    color: #424242;
    font-size: 38rpx;
}

.pro-show .pro-con .price-con .price text {
    font-size: 22rpx;
    font-weight: normal;
    margin-top: 10rpx;
    margin-right: 7rpx;
}

.pro-show .pro-con .price-con .price text.pro-count {
    margin-left: 26rpx;
}

.pro-show .pro-con .price-con .add-cart, .add-cart {
    border: 1rpx solid #e0e0e0;
    border-radius: 5rpx;
    height: 56rpx;
    width: 160rpx;
    font-size: 22rpx;
    line-height: 56rpx;
    font-weight: normal;
    text-align: center;
}

.pro-show .pro-con .price-con .add-cart.yellow, .add-cart.yellow {
    background: #f9d158;
    border: 1px solid #f9d158
}

.ml15 {
    margin-left: 15rpx;
}

/*detail-more*/

.detail-more, .price-more {
    color: #212121;
    font-size: 28rpx;
}

.detail-more .more-item {
    margin-bottom: 30rpx;
    padding-bottom: 30rpx;
    border-bottom: 1rpx solid #f5f5f5;
}

.detail-more .more-item:last-child {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: none;
}

.detail-more .more-item .paragraph {
    width: 100%;
    color: #757575;
}

.detail-more .more-item .paragraph text{
    color: #212121
}

/*price-more*/

.price-more .price-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #757575;
}

.price-more .price-item .production-price {
    margin-top: 0;
}



.price-more .price-item:not(:last-child) .production-price {
    color: #424242;
    font-weight: normal;
    font-size: 38rpx;
}

.price-more .price-item:last-child {
    color: #dc5e56;
}

/*order-detail-button*/

.order-detail-button {
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
    display: flex;
    height: 100rpx;
    width: 100%;
    color: #424242;
    font-size: 28rpx;
    line-height: 100rpx;
    text-align: center;
}

.order-detail-button navigator {
    border-top: 1rpx solid #e0e0e0;
}

.order-detail-button view{
    flex: 1
}

.order-detail-button view.first{
    border-right: 1rpx solid #e0e0e0;
}


.order-detail-button view.last {
    background: #f2d26c;
    border-top: 1rpx solid #f2d26c;
}

.order-detail-button button {
    flex: 1;
    background: #f2d26c;
    border-top: 1rpx solid #f2d26c;
    border-radius: 0rpx;
    font-size: 28rpx;
    line-height: 100rpx;
    padding: 0rpx;
}

.order-detail-button button.dark {
    background: #fff;
    border-right: 1rpx solid #e0e0e0;
    border-top: 1rpx solid #e0e0e0;
}

.order-detail-button button:after {
    border: none
}

.mb25 {
    margin-bottom:25rpx;
    line-height: 1;
}

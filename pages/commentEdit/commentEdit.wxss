}

.imgContainer image, .imgContainer .wrap{
    width: 127rpx;
    height: 127rpx;
}

.imgContainer .wrap {
    position: relative;
    display: inline-block;
}

.imgContainer .deleteIcon {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    right: -15rpx;
    top: -15rpx;
    z-index: 3;
}

.imgContainer .wrap:not(:nth-of-type(4n+4)) {
    margin-right: 50rpx;
}






@import '../commentList/commentList.wxss'

.detail-main {
    padding-bottom: 100rpx;
    height: 100%;
}

.detail-main image {
    height: 100%;
    width: 100%;
}

/*banner*/

.swiper-container {
    background: #fff;
    padding:30rpx 0 36rpx;
}

.production-show {
    width: 750rpx;
    height: 525rpx;
    margin-bottom: 24rpx;
}

.production-show image {
    width: 750rpx;
    transform: scale(0.7);
    transform-origin: top center;
}


.pagenationBox {
    text-align: center;
}

.pagenationBox view:first-of-type{
    display: inline-block;
    padding: 9rpx 14rpx;
    color: #808080;
    border: 1px solid #dadada;
    border-radius: 5rpx;
    font-size: 20rpx;
}

.pagenationBox view:last-of-type {
    margin: 14rpx 0 0 0;
}

.pagenationBox view:last-of-type .wrap {
    width: 17rpx;
    height: 17rpx;
    padding: 3rpx;
    display: inline-block;
    margin: 0 8rpx;
}

.pagenationBox view:last-of-type .wrap, .pagenationBox view:last-of-type .wrap text {
    border-radius: 50%;
}

.pagenationBox view:last-of-type .wrap text {
    display: block;
    height: 17rpx;
    font-size: 0;
}

.pagenationBox view:last-of-type .wrap.active {
    transform: scale(1.4);
}


/*简介*/

.production-simple-intro {
    padding: 30rpx;
    background: #fff;
    font-size: 22rpx;
    line-height:1;
}

.production-simple-intro .title {
    color: #212121;
    font-weight: bold;
    font-size: 30rpx;
}

.production-simple-intro .title .red {
    color: red;
    margin-left: 10rpx;
    font-weight: 400;
    font-size: 25rpx;
}

.production-simple-intro .intro {
    color: #bdbdbd;
    line-height: 34rpx;
    margin: 9rpx 0 24rpx 0;
}

.production-simple-intro .price {
    color: #ef5350;
    font-size: 36rpx;
    font-weight: bold;
}

.production-simple-intro .price text {
    font-size: 18rpx;
    margin-right: 15rpx;
}

/*标题*/

.production-detail-title {
    display: flex;
    align-items: center;
    height: 84rpx;
    color: #bdbdbd;
    font-size: 24rpx;
}

.production-detail-title view {
    position: relative;
    flex: 1;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
}

.production-detail-title view:last-child::after {
    content: "";
    margin-top: -7rpx;
    position: absolute;
    left: 0;
    top: 50%;
    background: #bdbdbd;
    height: 14rpx;
    width: 2rpx;
}

.production-detail-title view.active {
    color: #212121
}

.production-detail-title view.active span {
    display: block;
}

.production-detail-title view span {
    margin-left: -15rpx;
    position: absolute;
    bottom: 0;
    left: 50%;
    /*background: #f9d158;*/
    background: #b71f2e;
    display: none;
    height: 5rpx;
    width: 30rpx;
}


/*内容*/
.production-detail-con view {
    height: 100%;
    position: relative;
}

/*底部浮层*/

.buy-cart {
    position: fixed;
    left: 0;
    bottom: 0;
    background: #fff;
    display: flex;
    height: 100rpx;
    font-size: 28rpx;
    line-height: 100rpx;
    text-align: center;
    z-index: 1000;
}

.buy-cart view {
    position: relative;
    border-left: 1rpx solid #e0e0e0;
    border-top: 1rpx solid #e0e0e0;
    width: 318rpx;
}

.buy-cart view image {
    margin-top: 28rpx;
    height: 45rpx;
    width: 45rpx;
}

.buy-cart view text {
    position: absolute;
    left: 40rpx;
    top: 22rpx;
    background: #f40;
    border-radius: 100%;
    height: 30rpx;
    width: 30rpx;
    color: #fff;
    font-size: 14rpx;
    line-height: 30rpx;
    text-align: center;
}

.buy-cart view:first-child {
    border-left: none;
    width: 114rpx;
}

.buy-cart view:nth-child(3) {
    background: #b71f2e;
    border-left-color: #b71f2e;
    border-top: 1rpx solid #b71f2e;
    color: #fff;
}

.comment-panel {
    padding: 30rpx 30rpx 0 30rpx;
    background: #fff;
    margin: 30rpx 0;
    color: #bdbdbd;
}

.comment-panel .comment-title {
    display: flex;
    justify-content: space-between;
    font-size: 22rpx;
}

.comment-panel .comment-title text {
    color: #212121;
}

.comment-panel .comment-title view {
    color: #bdbdbd;
}

.comment-panel .comment-title view image {
    width:15rpx;
    margin-left: 30rpx;
    vertical-align: middle;
    margin-bottom: 2rpx;
}

.comment-panel .panel {
    color: #212121
}

.comment-panel .panel .otherInfo text:last-of-type {
    color: #757575;
}

.selectModal {
    background:#fff;
    width:750rpx;
    position:fixed;
    bottom:-100%;
    left:0;
    z-index:1002;
    box-sizing:border-box;
    padding: 45rpx 45rpx 204rpx 45rpx;
    font-size: 24rpx;
}

.selectModal .base-info{
    display:flex;
    justify-content: flex-start;
    padding-bottom: 45rpx;
    border-bottom: 1rpx solid #f5f5f5;
}

.selectModal .base-info image {
    width: 135rpx;
    height: 135rpx;
    border-radius: 8rpx;
    margin-right: 45rpx;
}

.selectModal .close {
    width: 31rpx;
    height: 31rpx;
    position: absolute;
    right: 0rpx;
    top: 0rpx;
    padding: 45rpx;
    box-size: content-box;
}

.selectModal .base-info .attr {
    display:flex;
    flex-direction: column;
    justify-content: space-between;
    color: #757575;
    line-height:1;
}

.selectModal .base-info .attr view:first-of-type {
    font-size: 30rpx;
    color: #212121;
}

.selectModal .base-info .attr view:nth-of-type(2) {
    display:flex;
    align-items: flex-end;
    font-size:36rpx;
    color: #ef5350;
}


.selectModal .base-info .attr view:nth-of-type(2) text:first-of-type{
    font-size: 18rpx;
    margin:0 15rpx 4rpx 0;
}

.selectModal .title {
    color: #757575;
    margin-top: 45rpx;
    color: #bdbdbd;
}

.selectModal .colors {
    display: flex;
    flex-wrap:wrap;
    justify-content: flex-start;
    padding-bottom: 14rpx;
}

.selectModal .colors  .opt-color {
    border: 1rpx solid #757575;
    border-radius: 8rpx;
    padding: 20rpx 25rpx;
    margin:30rpx 50rpx 0 0;
}

.selectModal .colors  .opt-color.active {
    /*color: #f9d158;*/
    color: #fff;
    background: #b71f2e;
    border-color: #b71f2e;
}

.selectModal .colors  .opt-color:nth-of-type(4n+4) {
    margin-right: 0;
}

.selectModal .count {
    margin-top: 30rpx;
    display: flex;
    width: 195rpx;
    align-items: center;
}

.selectModal .count view {
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 30rpx;
    color: #e0e0e0;
    border: 1rpx solid #e0e0e0;
    border-radius: 8rpx;
}

.selectModal .count view:last-of-type {
    color: #fff;
    /*background: #f9d158;*/
    border-color: #f9d158;
    background: #b71f2e;
    border-color: #b71f2e;
}

.selectModal .count input {
    flex:1;
    text-align: center;
    font-size: 28rpx;
    color: #212121;
}

.selectModal .submit {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    /*background: #f9d158;
    color: #212121;*/
    color: #fff;
    background: #b71f2e;
}

.mask {
    width: 750rpx;
    position:fixed;
    bottom:0;
    left:0;
    background: rgba(33,33,33,0.9);
}

.lackGood {
    position:fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100rpx;
    background: #bdbdbd;
    color: #212121;
    text-align: center;
    line-height: 100rpx;
    font-size: 24rpx;
}

.selectModal .gray {
    background: #bdbdbd;
}

video {
    width: 750rpx;
    height: 423rpx;
    position: absolute;
    top: 1635rpx;
    left: 0;
    z-index: 10;
}

video cover-view {
    margin:138rpx 0 0 302rpx;
}

video cover-view , video cover-view cover-image {
    width: 146rpx;
    height: 147rpx;
}

.more-wrap {
    padding: 25rpx 0 40rpx;
    background: #fff;
}

.more {
    display: flex;
    justify-content: space-between;
    font-size: 36rpx;
    padding: 30rpx 0;
    border-bottom: 1rpx solid #c6c6c6;
    margin: 0 44rpx;
}

.more view text {
    color: #838383;
    font-size: 30rpx;
}

.more image {
    width: 18rpx;
    vertical-align: middle;
    margin-left: 18rpx;
}

